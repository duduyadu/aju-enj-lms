rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 헬퍼 함수들
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // 사용자 컬렉션
    match /users/{userId} {
      // 자신의 데이터는 읽기 가능, 관리자는 모든 사용자 읽기 가능
      allow read: if isOwner(userId) || isAdmin();

      // 자신의 데이터 생성 (회원가입 시)
      allow create: if isOwner(userId);

      // 자신의 데이터 수정 (프로필, 세션 등), 관리자는 모든 사용자 수정 가능
      allow update: if isOwner(userId) || isAdmin();

      // 삭제는 관리자만 가능
      allow delete: if isAdmin();
    }

    // 코스 컬렉션
    match /courses/{courseId} {
      // 인증된 사용자는 활성화된 코스 읽기 가능
      allow read: if isAuthenticated();

      // 생성, 수정, 삭제는 관리자만 가능
      allow create, update, delete: if isAdmin();
    }

    // 챕터 컬렉션
    match /chapters/{chapterId} {
      // 인증된 사용자는 읽기 가능
      allow read: if isAuthenticated();

      // 생성, 수정, 삭제는 관리자만 가능
      allow create, update, delete: if isAdmin();
    }

    // 진행률 컬렉션
    match /progress/{progressId} {
      // 자신의 진행률만 읽기/쓰기 가능
      allow read: if isAuthenticated() &&
                    resource.data.userId == request.auth.uid;

      allow create: if isAuthenticated() &&
                      request.resource.data.userId == request.auth.uid;

      allow update: if isAuthenticated() &&
                      resource.data.userId == request.auth.uid;

      // 관리자는 모든 진행률 읽기 가능 (통계용)
      allow read: if isAdmin();

      // 삭제는 관리자만 가능
      allow delete: if isAdmin();
    }

    // 제출 컬렉션 (퀴즈 답안)
    match /submissions/{submissionId} {
      // 자신의 제출만 읽기 가능, 관리자는 모두 읽기 가능
      allow read: if (isAuthenticated() && resource.data.userId == request.auth.uid) || isAdmin();

      // 자신의 제출만 생성 가능
      allow create: if isAuthenticated() &&
                      request.resource.data.userId == request.auth.uid;

      // 수정/삭제 불가 (무결성 보장)
      allow update, delete: if false;
    }

    // 주문 컬렉션 (무통장 입금)
    match /orders/{orderId} {
      // 자신의 주문만 읽기 가능, 관리자는 모두 읽기 가능
      allow read: if (isAuthenticated() && resource.data.uid == request.auth.uid) || isAdmin();

      // 자신의 주문 생성 가능
      allow create: if isAuthenticated() &&
                      request.resource.data.uid == request.auth.uid;

      // 자신의 주문에 대해 입금확인 요청만 가능 (depositConfirmed, depositConfirmedAt 필드만)
      // 관리자는 모든 필드 수정 가능 (승인/취소)
      allow update: if isAdmin() ||
                      (isAuthenticated() &&
                       resource.data.uid == request.auth.uid &&
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['depositConfirmed', 'depositConfirmedAt']));

      // 삭제 불가 (기록 보존)
      allow delete: if false;
    }

    // 알림 컬렉션
    match /notifications/{notificationId} {
      // 자신의 알림만 읽기 가능
      allow read: if isAuthenticated() && resource.data.uid == request.auth.uid;

      // 알림 생성은 인증된 사용자 가능 (본인 또는 관리자가 타인에게)
      allow create: if isAuthenticated();

      // 자신의 알림 읽음 처리만 가능 (isRead 필드만)
      allow update: if isAuthenticated() &&
                      resource.data.uid == request.auth.uid &&
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isRead']);

      // 삭제는 관리자만 가능
      allow delete: if isAdmin();
    }

    // 기본 규칙: 모든 다른 문서는 접근 불가
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
